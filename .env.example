# =====================================================
# ACE CSS LEAVE PORTAL - DEVELOPMENT ENVIRONMENT EXAMPLE
# =====================================================
# 
# INSTRUCTIONS FOR LOCAL DEVELOPMENT:
# 1. Copy this file to .env
# 2. Update the values below with your local development details
# 3. Never commit .env to git (it is ignored by .gitignore)
#

# =====================================================
# DEVELOPMENT SERVER CONFIGURATION
# =====================================================

# For local development, use localhost
PUBLIC_IP=localhost
SERVER_IP=localhost
DOMAIN=localhost

# Network Protocol
ACCESS_PROTOCOL=http

# Application Ports
BACKEND_PORT=3009
FRONTEND_PORT=8085
REDIRECT_PORT=8080

# Environment
NODE_ENV=development
HOST=0.0.0.0

# Restrict dev server allowed hosts (comma separated, no wildcards)
ALLOWED_HOSTS=localhost,127.0.0.1

# =====================================================
# API CONFIGURATION
# =====================================================

# API URL for frontend
VITE_API_URL=http://localhost:3009

# =====================================================
# DATABASE CONFIGURATION
# =====================================================

# Local MySQL database settings
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=your_local_mysql_password
DB_NAME=cyber_security_leave_portal
DB_PORT=3306

# =====================================================
# SECURITY CONFIGURATION
# =====================================================

# JWT Secret - Generate with: openssl rand -base64 48
# Or use: node -e "console.log(require('crypto').randomBytes(64).toString('base64'))"
JWT_SECRET=your_strong_jwt_secret_at_least_32_characters

# CORS Origins (comma separated, no spaces)
CORS_ORIGIN=http://localhost:8085,http://localhost:3009

# Security Settings for local development
SECURE_COOKIES=false
TRUST_PROXY=false

# =====================================================
# RATE LIMITING
# =====================================================

# Rate limiting settings (more lenient for development)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=200

# Auth endpoints rate limiting
AUTH_RATE_LIMIT_WINDOW_MS=300000
AUTH_RATE_LIMIT_MAX_REQUESTS=20

# =====================================================
# FILE UPLOAD SETTINGS
# =====================================================

# File upload configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=uploads

# =====================================================
# SESSION SETTINGS
# =====================================================

# Session configuration (in milliseconds)
SESSION_TIMEOUT=86400000

# =====================================================
# EMAIL CONFIGURATION (Optional - for local testing)
# =====================================================

# SMTP settings for email notifications (optional for local dev)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_test_email@gmail.com
SMTP_PASS=your_app_specific_password
SMTP_FROM=your_test_email@gmail.com

# =====================================================
# APPLICATION SPECIFIC SETTINGS
# =====================================================

# Application settings
WINDOWS_SERVICE=false
LOG_LEVEL=debug
COLLEGE_NETWORK=false
